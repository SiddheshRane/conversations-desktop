<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<HBox fx:id="hbox" maxHeight="1.7976931348623157E308" spacing="4.0" styleClass="cell-graphic" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="profile" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" styleClass="avatar">
         <image>
            <Image url="@../images/profile-thumb.jpg" />
         </image>
      </ImageView>
      <VBox maxHeight="1.7976931348623157E308">
         <children>
            <HBox spacing="5.0">
               <children>
                  <Label fx:id="sender" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" styleClass="username" text="siddheshrane" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="time" alignment="CENTER_RIGHT" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" styleClass="time" text="11:55pm" />
               </children>
               <padding>
                  <Insets bottom="2.0" />
               </padding>
            </HBox>
            <TextFlow fx:id="textFlow" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" snapToPixel="false" styleClass="text-flow" VBox.vgrow="ALWAYS">
               <children>
                  <Text fx:id="text" cache="true" cacheHint="QUALITY" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="message" text="hello there!" />
               </children>
               <padding>
                  <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
               </padding>
            </TextFlow>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </VBox>
   </children>
</HBox>
